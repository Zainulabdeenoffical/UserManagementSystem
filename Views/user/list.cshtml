@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Users Information</h1>
<button class="btn btn-sm btn-primary mt-2" id="Adddata">Add User</button>


 <table class="table table-bordered table-striped" id="UserTable"> 
    <thead>
        <tr>
          
            <td style="background-color: black; color: white;"><input type="checkbox" class="form-check-input row-checkbox" id="DeleteAll" name="user_select" /> Select All</td>
            <th style="background-color: black; color: white;">ID</th>
            <th style="background-color: black; color: white;">First Name</th>
            <th style="background-color: black; color: white;">Last Name</th>
            <th style="background-color: black; color: white;">Email</th>
            <th style="background-color: black; color: white;">Action</th>
           
        </tr>
      </thead>
    <tbody>
        @foreach (var d in Model)

        {
            <tr>
                <td><input type="checkbox" class="form-check-input row-checkbox" name="user_select" value="@d.Id" /></td>
                <td>@d.Id</td>
                <td>@d.First_name</td>
                <td>@d.Last_name</td>
                <td>@d.Email</td>
                <td>
                    <button type="button" class="btn btn-primary" id="Editbtn" onclick="update('@d.Id');">Edit</button>
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" id="delete_user" onclick="Delete_btn('@d.Id');">Delete</button>
                </td>
            </tr>

        }
    </tbody>
    

</table>
<div class="col-6">
    <button style="cursor:pointer" class="btn btn-sm btn-danger m-2 p-2 float-sm-start" id="Select_Delete">Delete</button>
</div>

<div class="modal fade modal" id="usermodal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Add User</h1>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="addUserForm">
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" placeholder="Enter your First name" class="form-control" id="First_name" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" placeholder="Enter your Last name" class="form-control" id="Last_name" autocomplete="off"/>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" placeholder="Enter your Email Address" class="form-control" id="Email" autocomplete="off " required/> 
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveBtn">Save</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>

            </div>
            
        </div>
    </div>
</div>


<div class="modal fade modal" id="Editmodel">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="text-info modal-title">Edit User</h1>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <form method="post" id="addUserForm">
                    <div class="form-group">
                        <label>ID</label>
                        <input type="text"  class="form-control" id="userid" readonly />
                    </div>
                    <div class="form-group">
                        <label>First Name</label>
                        <input type="text" placeholder= "Enter Your First name" class="form-control" id="fname"  autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input type="text" placeholder="Enter your Last name" class="form-control" id="lname" autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="text" placeholder="Enter your Email Address" class="form-control" id="em" autocomplete="off " required />
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" id="saveBtn" onclick="update_fun();">Save</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>

            </div>

        </div>
    </div>
</div>


@section scripts{
    <script src="~/js/view.js"></script>
    <script src="~/js/add.js"></script>
    <script src="~/js/delete.js"></script>
    <script src="~/js/edit.js"></script>
}


